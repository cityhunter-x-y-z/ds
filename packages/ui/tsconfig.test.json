{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "target": "ES2015",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts", 
    "src/**/*.spec.tsx",
    "src/setupTests.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": []
}