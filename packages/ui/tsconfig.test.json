{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "es6"]
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx", 
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/setupTests.ts",
    "src/types/jest.d.ts",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}